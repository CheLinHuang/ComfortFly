<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/activity_margin"
    tools:context="team49.comfortfly.Home"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="67dp"
        android:layout_weight="0.5"
        app:srcCompat="@drawable/search"
        android:layout_marginStart="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/showButton"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginRight="8dp"
        android:layout_weight="0.5"
        app:srcCompat="@drawable/show_existing_trip"
        android:layout_alignTop="@+id/searchButton"
        android:layout_alignStart="@+id/showChat" />

    <ImageButton
        android:id="@+id/showSetting"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/settings"
        android:layout_below="@+id/searchButton"
        android:layout_alignStart="@+id/searchButton" />

    <ImageButton
        android:id="@+id/showChat"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginRight="8dp"
        android:layout_weight="0.5"
        app:srcCompat="@drawable/chat"
        android:layout_alignTop="@+id/showSetting"
        android:layout_toEndOf="@+id/showSetting"
        android:layout_marginStart="22dp" />

</RelativeLayout>
